{%- style -%}
  .hero-gift-guide {
    position: relative;
    background-color: {{ section.settings.background_color }};
    min-height: {{ section.settings.section_height }}px;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    overflow: hidden;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .hero-gift-guide__content {
    position: relative;
    z-index: 2;
    padding: {{ section.settings.content_padding }}px;
    max-width: {{ section.settings.content_max_width }}px;
    margin-bottom: {{ section.settings.bottom_margin }}px;
    margin-left: {{ section.settings.left_margin }}px;
  }

  .hero-gift-guide__heading {
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_bottom_margin }}px 0;
    line-height: 1.2;
  }

  .hero-gift-guide__description {
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: {{ section.settings.description_font_weight }};
    color: {{ section.settings.description_color }};
    margin: 0 0 {{ section.settings.description_bottom_margin }}px 0;
    line-height: 1.5;
    max-width: {{ section.settings.description_max_width }}px;
  }

  .hero-gift-guide__button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .hero-gift-guide__button:hover {
    background-color: {{ section.settings.button_hover_background_color }};
    transform: translateY(-2px);
  }

  .hero-gift-guide__button-arrow {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .hero-gift-guide__button:hover .hero-gift-guide__button-arrow {
    transform: translateX(4px);
  }

  /* Mobile Layout - Completely Different */
  @media (max-width: 768px) {
    .hero-gift-guide {
      min-height: auto;
      display: block;
      width: 100vw;
      margin-left: calc(-50vw + 50%);
      background: none !important;
      background-image: none !important;
    }

    .hero-gift-guide__content {
      display: none !important;
    }

    .hero-gift-guide__mobile-content {
      display: block !important;
      padding: 30px 20px 20px;
      margin: 0;
      max-width: 100%;
      background: white;
      position: relative;
      z-index: 2;
      text-align: center;
    }

    .hero-gift-guide__mobile-image-container {
      display: block !important;
    }

    .hero-gift-guide__mobile-button {
      display: inline-flex !important;
    }

    .hero-gift-guide__mobile-heading {
      font-size: {{ section.settings.mobile_heading_font_size }}px;
      margin-bottom: 15px;
      color: {{ section.settings.mobile_heading_color }};
      margin: 0 0 15px 0;
      line-height: 1.2;
    }

    .hero-gift-guide__mobile-description {
      font-size: {{ section.settings.mobile_description_font_size }}px;
      margin-bottom: 25px;
      max-width: 100%;
      color: {{ section.settings.mobile_description_color }};
      margin: 0 0 25px 0;
      line-height: 1.5;
    }

    .hero-gift-guide__mobile-image-container {
      position: relative;
      width: 100%;
      height: 300px;
      margin-top: 20px;
    }

    .hero-gift-guide__mobile-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .hero-gift-guide__mobile-button {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 3;
      background-color: {{ section.settings.mobile_button_background_color }};
      color: {{ section.settings.mobile_button_text_color }};
      font-size: {{ section.settings.mobile_button_font_size }}px;
      padding: {{ section.settings.mobile_button_padding_vertical }}px {{ section.settings.mobile_button_padding_horizontal }}px;
    }
  }

  @media (max-width: 480px) {
    .hero-gift-guide__mobile-content {
      padding: 25px 15px 15px;
    }

    .hero-gift-guide__mobile-heading {
      font-size: {{ section.settings.mobile_heading_font_size_small }}px;
    }

    .hero-gift-guide__mobile-description {
      font-size: {{ section.settings.mobile_description_font_size_small }}px;
    }

    .hero-gift-guide__mobile-image-container {
      height: 250px;
    }

    .hero-gift-guide__mobile-button {
      font-size: {{ section.settings.mobile_button_font_size_small }}px;
      padding: {{ section.settings.mobile_button_padding_vertical_small }}px {{ section.settings.mobile_button_padding_horizontal_small }}px;
    }
  }

  /* Hide mobile elements on desktop */
  .hero-gift-guide__mobile-image-container,
  .hero-gift-guide__mobile-button,
  .hero-gift-guide__mobile-content {
    display: none;
  }
{%- endstyle -%}

<div class="hero-gift-guide" style="
  {%- if section.settings.background_image -%}
    background-image: url({{ section.settings.background_image | image_url: width: 3200 }});
    background-repeat: {{ section.settings.bg_repeat }};
    background-position: {{ section.settings.bg_position }};
    background-size: {%- case section.settings.bg_size_mode -%}{%- when 'cover' -%}cover{%- when 'contain' -%}contain{%- else -%}{{ section.settings.bg_custom_size_percent }}% auto{%- endcase -%};
  {%- endif -%}
">

  <div class="hero-gift-guide__content">
    {%- if section.settings.heading != blank -%}
      <h1 class="hero-gift-guide__heading">{{ section.settings.heading }}</h1>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="hero-gift-guide__description">{{ section.settings.description }}</div>
    {%- endif -%}

    {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
      <a href="{{ section.settings.button_link }}" class="hero-gift-guide__button">
        {{ section.settings.button_text }}
        <svg class="hero-gift-guide__button-arrow" viewBox="0 0 16 16" fill="currentColor">
          <path d="M8 1L15 8L8 15M15 8H1"/>
        </svg>
      </a>
    {%- endif -%}
  </div>

  <!-- Mobile Content - Only shows on mobile -->
  <div class="hero-gift-guide__mobile-content">
    {%- if section.settings.mobile_heading != blank -%}
      <h1 class="hero-gift-guide__mobile-heading">{{ section.settings.mobile_heading }}</h1>
    {%- endif -%}

    {%- if section.settings.mobile_description != blank -%}
      <div class="hero-gift-guide__mobile-description">{{ section.settings.mobile_description }}</div>
    {%- endif -%}
  </div>

  <!-- Mobile Image Container - Only shows on mobile -->
  {%- if section.settings.mobile_image -%}
    <div class="hero-gift-guide__mobile-image-container">
      <img 
        src="{{ section.settings.mobile_image | image_url: width: 800 }}"
        alt="{{ section.settings.mobile_image.alt | escape }}"
        class="hero-gift-guide__mobile-image"
        loading="lazy"
        width="{{ section.settings.mobile_image.width }}"
        height="{{ section.settings.mobile_image.height }}"
      >
      
      {%- if section.settings.mobile_button_text != blank and section.settings.mobile_button_link != blank -%}
        <a href="{{ section.settings.mobile_button_link }}" class="hero-gift-guide__mobile-button">
          {{ section.settings.mobile_button_text }}
          <svg class="hero-gift-guide__button-arrow" viewBox="0 0 16 16" fill="currentColor">
            <path d="M8 1L15 8L8 15M15 8H1"/>
          </svg>
        </a>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>

