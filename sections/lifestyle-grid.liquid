{% liquid
  assign section_id = 'lifestyle-grid-' | append: section.id
  assign section_class = 'lifestyle-grid'
  assign container_class = 'lifestyle-grid__container'
  assign grid_class = 'lifestyle-grid__items'
  assign item_class = 'lifestyle-grid__item'
  assign hotspot_class = 'lifestyle-grid__hotspot'
  assign popup_class = 'lifestyle-grid__popup'
  assign overlay_class = 'lifestyle-grid__overlay'
%}

<style>
     .{{ section_class }} {
     padding: 10px 0;
     background-color: {{ section.settings.background_color | default: '#ffffff' }};
   }

  .{{ container_class }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .{{ section_class }}__title {
    font-family: {{ section.settings.title_font_family | default: 'serif' }};
    font-size: {{ section.settings.title_font_size | append: 'px' | default: '32px' }};
    font-weight: {{ section.settings.title_font_weight | default: '400' }};
    color: {{ section.settings.title_color | default: '#000000' }};
    margin-bottom: 40px;
    text-align: left;
  }

  .{{ grid_class }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-top: 40px;
  }

  .{{ item_class }} {
    position: relative;
    aspect-ratio: 1;
    overflow: visible;
    border-radius: {{ section.settings.image_border_radius | default: '0px' }};
  }

  /* Hotspot positioning container */
  .{{ item_class }}::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .{{ item_class }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
    border-radius: {{ section.settings.image_border_radius | default: '0px' }};
  }

  .{{ item_class }}:hover img {
    transform: scale(1.05);
  }

  .{{ hotspot_class }} {
    position: absolute;
    width: 24px;
    height: 24px;
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 2;
    border: 1px solid rgba(255, 255, 255, 0.9);
    transform: translate(-50%, -50%);
    pointer-events: auto;
    /* Ensure hotspot can be positioned anywhere within the image */
    max-width: none;
    max-height: none;
  }

  .{{ hotspot_class }}:hover {
    background-color: rgba(255, 255, 255, 1);
    transform: translate(-50%, -50%) scale(1.2);
  }

  .{{ hotspot_class }}::before,
  .{{ hotspot_class }}::after {
    content: '';
    position: absolute;
    background-color: #000000;
  }

  .{{ hotspot_class }}::before {
    width: 1px;
    height: 10px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .{{ hotspot_class }}::after {
    width: 10px;
    height: 1px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .{{ popup_class }} {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    background-color: #ffffff;
    border-radius: 0;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    z-index: 1001;
    max-width: 350px;
    width: 90%;
    max-height: 85vh;
    overflow-y: auto;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .{{ popup_class }}.active {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, -50%) scale(1);
  }

  .{{ popup_class }}__close {
    position: absolute;
    top: 16px;
    right: 16px;
    background: none;
    border: none;
    font-size: 20px;
    cursor: pointer;
    color: #000000;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.3s ease;
    font-weight: 400;
    z-index: 10;
  }

  .{{ popup_class }}__close:hover {
    background-color: #f5f5f5;
  }

     .{{ popup_class }}__content {
     padding: 15px 0;
     display: flex;
     flex-direction: column;
     gap: 0;
   }

     .{{ popup_class }}__row-1 {
     display: flex;
     flex-direction: row;
     gap: 0;
     margin-left: 18px;
     margin-right: 18px;
   }

   .{{ popup_class }}__image-container {
     flex: 1;
     background-color: #f5f5f5;
     display: flex;
     align-items: center;
     justify-content: center;
     padding: 0;
     margin-top: 12px;
     margin-bottom: 12px;
   }

  .{{ popup_class }}__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
    display: block;
  }

     .{{ popup_class }}__details {
     flex: 1;
     display: flex;
     flex-direction: column;
     gap: 4px;
     padding: 15px;
     position: relative;
   }

  .{{ popup_class }}__row-2,
  .{{ popup_class }}__row-3,
  .{{ popup_class }}__row-4 {
    padding: 0 18px;
  }

     .{{ popup_class }}__row-2 {
     padding-bottom: 8px;
   }

   .{{ popup_class }}__row-3 {
     padding-bottom: 8px;
   }

   .{{ popup_class }}__row-4 {
     padding-bottom: 12px;
   }

     .{{ popup_class }}__title {
     font-size: 18px;
     font-weight: 400;
     color: #000000;
     margin: 0 0 6px 0;
     font-family: 'Jost', sans-serif;
   }

   .{{ popup_class }}__price {
     font-size: 16px;
     font-weight: 400;
     color: #000000;
     font-family: 'Jost', sans-serif;
     margin-bottom: 6px;
   }

   .{{ popup_class }}__description {
     font-size: 12px;
     line-height: 1.3;
     color: #666;
     font-family: 'Jost', sans-serif;
     margin-top: 6px;
     word-spacing: -0.5px;
   }



  .{{ popup_class }}__color-section {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

     .{{ popup_class }}__color-label {
     font-size: 12px;
     font-weight: 400;
     color: #000000;
     font-family: 'Jost', sans-serif;
   }

  .{{ popup_class }}__color-swatches {
    display: flex;
    gap: 0;
    justify-content: center;
  }

           .{{ popup_class }}__color-swatch {
      flex: 1;
      height: 40px;
      border: 1px solid #ddd;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 12px;
      font-weight: 400;
      transition: all 0.3s ease;
      background-color: #ffffff;
      color: #000000;
      font-family: 'Jost', sans-serif;
      position: relative;
             padding-left: 12px;
    }

         /* Color indicator on the left side - vertical bar */
     .{{ popup_class }}__color-swatch::before {
       content: '';
       position: absolute;
       left: 0;
       top: 0;
       bottom: 0;
       width: 4px;
       border: none;
     }

    /* Color-specific indicators */
    .{{ popup_class }}__color-swatch[data-color="white"]::before {
      background-color: #ffffff;
    }

    .{{ popup_class }}__color-swatch[data-color="black"]::before {
      background-color: #000000;
    }

    .{{ popup_class }}__color-swatch[data-color="blue"]::before {
      background-color: #0066cc;
    }

    .{{ popup_class }}__color-swatch[data-color="red"]::before {
      background-color: #cc0000;
    }

    .{{ popup_class }}__color-swatch[data-color="grey"]::before {
      background-color: #666666;
    }

    .{{ popup_class }}__color-swatch[data-color="navy"]::before {
      background-color: #003366;
    }

    .{{ popup_class }}__color-swatch[data-color="brown"]::before {
      background-color: #8B4513;
    }

    .{{ popup_class }}__color-swatch[data-color="green"]::before {
      background-color: #006600;
    }

    .{{ popup_class }}__color-swatch[data-color="pink"]::before {
      background-color: #FF69B4;
    }

    .{{ popup_class }}__color-swatch[data-color="orange"]::before {
      background-color: #FF6600;
    }

    .{{ popup_class }}__color-swatch[data-color="purple"]::before {
      background-color: #660099;
    }

  .{{ popup_class }}__color-swatch:first-child {
    border-radius: 0;
  }

  .{{ popup_class }}__color-swatch:last-child {
    border-radius: 0;
  }

     .{{ popup_class }}__color-swatch.selected {
     background-color: #000000;
     color: #ffffff;
     border-color: #000000;
   }

   /* Selected state - background turns black, but color indicator stays the same */
   .{{ popup_class }}__color-swatch.selected::before {
     /* Keep the original color indicator unchanged */
   }

  .{{ popup_class }}__size-section {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

     .{{ popup_class }}__size-label {
     font-size: 12px;
     font-weight: 400;
     color: #000000;
     font-family: 'Jost', sans-serif;
   }

     .{{ popup_class }}__size-dropdown {
     position: relative;
     width: 100%;
   }

   .{{ popup_class }}__size-select-custom {
     position: relative;
     width: 100%;
     cursor: pointer;
   }

   .{{ popup_class }}__size-select-display {
     width: 100%;
     padding: 10px 14px;
     border: 1px solid #ddd;
     border-radius: 0;
     background-color: #ffffff;
     font-size: 13px;
     font-family: 'Jost', sans-serif;
     text-align: center;
     position: relative;
     background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
     background-position: right 8px center;
     background-repeat: no-repeat;
     background-size: 16px;
     padding-right: 40px;
   }

       .{{ popup_class }}__size-select-options {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: #ffffff;
      border: 1px solid #ddd;
      border-top: none;
      z-index: 1000;
      display: none;
      max-height: 200px;
      overflow-y: auto;
      /* Hide scrollbar for webkit browsers */
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* Internet Explorer 10+ */
    }

    /* Hide scrollbar for webkit browsers */
    .{{ popup_class }}__size-select-options::-webkit-scrollbar {
      display: none;
    }

   .{{ popup_class }}__size-select-custom.active .{{ popup_class }}__size-select-options {
     display: block;
   }

   .{{ popup_class }}__size-option {
     padding: 12px;
     text-align: center;
     background-color: #ffffff;
     color: #000000;
     font-size: 13px;
     font-family: 'Jost', sans-serif;
     cursor: pointer;
     transition: all 0.3s ease;
     height: 40px;
     line-height: 16px;
     display: flex;
     align-items: center;
     justify-content: center;
   }

   .{{ popup_class }}__size-option:hover {
     background-color: #000000;
     color: #ffffff;
   }

   .{{ popup_class }}__size-option.selected {
     background-color: #000000;
     color: #ffffff;
   }

  .{{ popup_class }}__size-select {
    width: 100%;
    padding: 10px 14px;
    border: 1px solid #ddd;
    border-radius: 0;
    background-color: #ffffff;
         font-size: 13px;
     cursor: pointer;
     appearance: none;
     font-family: 'Jost', sans-serif;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 8px center;
    background-repeat: no-repeat;
    background-size: 16px;
    padding-right: 40px;
    text-align: center;
  }

  .{{ popup_class }}__size-select:focus {
    outline: none;
    border-color: #000000;
  }

                                               /* Override browser default styling for dropdown options */
      .{{ popup_class }}__size-select {
        color: #000000 !important;
      }

      .{{ popup_class }}__size-select option {
        text-align: center;
        padding: 12px;
        background-color: #ffffff !important;
        color: #000000 !important;
        transition: all 0.3s ease;
        height: 40px;
        line-height: 16px;
      }

      /* Force black background on all interactive states */
      .{{ popup_class }}__size-select option:hover,
      .{{ popup_class }}__size-select option:focus,
      .{{ popup_class }}__size-select option:checked,
      .{{ popup_class }}__size-select option:selected,
      .{{ popup_class }}__size-select option[selected] {
        background-color: #000000 !important;
        color: #ffffff !important;
      }

      /* Additional specificity for webkit browsers */
      .{{ popup_class }}__size-select option::-webkit-option {
        background-color: #ffffff !important;
        color: #000000 !important;
      }

      .{{ popup_class }}__size-select option::-webkit-option:hover,
      .{{ popup_class }}__size-select option::-webkit-option:checked {
        background-color: #000000 !important;
        color: #ffffff !important;
      }

  .{{ popup_class }}__add-to-cart {
    display: inline-block;
    background-color: #000000;
    color: #ffffff;
    text-decoration: none;
    padding: 14px 18px;
    border-radius: 0;
         font-size: 13px;
     font-weight: 400;
     transition: background-color 0.3s ease;
     text-align: center;
     border: none;
     cursor: pointer;
     font-family: 'Jost', sans-serif;
    width: 100%;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
  }

  .{{ popup_class }}__add-to-cart:hover {
    background-color: #333333;
  }

  .{{ overlay_class }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .{{ overlay_class }}.active {
    opacity: 1;
    visibility: visible;
  }

           @media (max-width: 768px) {
      .{{ grid_class }} {
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
      }

      .{{ section_class }}__title {
        font-size: {{ section.settings.title_font_size_mobile | append: 'px' | default: '24px' }};
        margin-bottom: 30px;
        text-align: center;
      }

      .{{ section_class }} {
        padding: 40px 0;
      }

      .{{ container_class }} {
        padding: 0 15px;
      }

             .{{ popup_class }} {
         max-width: 320px;
         width: 90%;
       }

       .{{ popup_class }}__image-container {
         padding: 0;
       }

               .{{ popup_class }}__image {
          width: 100%;
          height: 100%;
        }

       .{{ popup_class }}__details {
         padding: 12px;
       }
    }

  @media (max-width: 480px) {
    .{{ grid_class }} {
      gap: 10px;
    }

    .{{ hotspot_class }} {
      width: 20px;
      height: 20px;
    }

    .{{ hotspot_class }}::before {
      height: 8px;
    }

    .{{ hotspot_class }}::after {
      width: 8px;
    }
  }
</style>

<div class="{{ section_class }}" data-section-id="{{ section.id }}" data-section-type="lifestyle-grid">
  <div class="{{ container_class }}">
    {% if section.settings.title != blank %}
      <h2 class="{{ section_class }}__title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="{{ grid_class }}">
      {% for block in section.blocks %}
        {% if block.type == 'lifestyle_item' %}
          <div class="{{ item_class }}" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 600 | image_tag: 
                alt: block.settings.image.alt,
                loading: 'lazy',
                class: 'lifestyle-grid__image'
              }}
            {% else %}
              <div style="background-color: #f5f5f5; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: #999;">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}

                         {% if block.settings.product != blank or block.settings.custom_link != blank %}
               <button 
                 class="{{ hotspot_class }}"
                 style="
                   --hotspot-x: {{ block.settings.hotspot_position_x | default: '50' }}%;
                   --hotspot-y: {{ block.settings.hotspot_position_y | default: '50' }}%;
                   top: var(--hotspot-y);
                   left: var(--hotspot-x);
                 "
                 data-hotspot-id="{{ block.id }}"
                 data-product-id="{{ block.settings.product.id }}"
                 data-product-title="{{ block.settings.product.title | escape }}"
                 data-product-price="{{ block.settings.product.price | money }}"
                 data-product-url="{{ block.settings.product.url }}"
                 data-product-image="{{ block.settings.product.featured_image | image_url: width: 400 }}"
                 data-product-description="{{ block.settings.product.description | strip_html | truncate: 100 }}"
                                   data-custom-link="{{ block.settings.custom_link }}"
                  data-custom-title="{{ block.settings.custom_title | escape }}"
                  data-custom-description="{{ block.settings.custom_description | escape }}"
                  data-custom-image="{{ block.settings.custom_image | image_url: width: 400 }}"
                  data-color-combination="{{ block.settings.color_combination | default: 'blue_black' }}"
                  data-default-color="{{ block.settings.default_color | default: 'first' }}"
                  aria-label="View product details"
               >
                 <span class="visually-hidden">View product</span>
               </button>
             {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Popup Overlay -->
  <div class="{{ overlay_class }}" data-overlay></div>

                       <!-- Popup Modal -->
     <div class="{{ popup_class }}" data-popup>
       <button class="{{ popup_class }}__close" data-popup-close aria-label="Close popup">
         ×
       </button>
                               <div class="{{ popup_class }}__content">
           <!-- Row 1: Image and Details -->
           <div class="{{ popup_class }}__row-1">
                           <div class="{{ popup_class }}__image-container">
                <img class="{{ popup_class }}__image" data-popup-image src="" alt="" width="120" height="120">
              </div>
             <div class="{{ popup_class }}__details">
               <h3 class="{{ popup_class }}__title" data-popup-title></h3>
               <div class="{{ popup_class }}__price" data-popup-price></div>
               <p class="{{ popup_class }}__description" data-popup-description></p>
             </div>
           </div>
           
           <!-- Row 2: Color Swatches -->
           <div class="{{ popup_class }}__row-2">
             <div class="{{ popup_class }}__color-section">
               <div class="{{ popup_class }}__color-label">Color</div>
                                                               <div class="{{ popup_class }}__color-swatches" data-popup-color-swatches>
                   <!-- Color swatches will be dynamically generated here -->
                 </div>
             </div>
           </div>
           
           <!-- Row 3: Size Dropdown -->
           <div class="{{ popup_class }}__row-3">
             <div class="{{ popup_class }}__size-section">
               <div class="{{ popup_class }}__size-label">Size</div>
                               <div class="{{ popup_class }}__size-dropdown">
                  <div class="{{ popup_class }}__size-select-custom" data-custom-select>
                    <div class="{{ popup_class }}__size-select-display">Choose your size</div>
                    <div class="{{ popup_class }}__size-select-options">
                      <div class="{{ popup_class }}__size-option" data-value="">Choose your size</div>
                      <div class="{{ popup_class }}__size-option" data-value="xs">XS</div>
                      <div class="{{ popup_class }}__size-option" data-value="s">S</div>
                      <div class="{{ popup_class }}__size-option" data-value="m">M</div>
                      <div class="{{ popup_class }}__size-option" data-value="l">L</div>
                      <div class="{{ popup_class }}__size-option" data-value="xl">XL</div>
                    </div>
                  </div>
                  <select class="{{ popup_class }}__size-select" style="display: none;">
                    <option value="">Choose your size</option>
                    <option value="xs">XS</option>
                    <option value="s">S</option>
                    <option value="m">M</option>
                    <option value="l">L</option>
                    <option value="xl">XL</option>
                  </select>
                </div>
             </div>
           </div>
           
           <!-- Row 4: Add to Cart Button -->
           <div class="{{ popup_class }}__row-4">
                           <button class="{{ popup_class }}__add-to-cart" data-popup-add-to-cart>
                ADD TO CART →
              </button>
           </div>
         </div>
    </div>
</div>

<script src="{{ 'lifestyle-grid.js' | asset_url }}"></script>

<script>
  // Simple test to ensure hotspots are clickable
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM loaded, looking for hotspots...');
    const hotspots = document.querySelectorAll('[data-hotspot-id]');
    console.log('Found hotspots:', hotspots.length);
    
    hotspots.forEach(hotspot => {
      hotspot.addEventListener('click', function(e) {
        console.log('Hotspot clicked!', e.target);
        e.preventDefault();
      });
    });
  });
</script>

